@import "_variables"

body, html
  font-family: Georgia, Cambria, 'Times New Roman', Times, serif
  font-size: font-size
  color: color-default

a
  text-decoration: none
  color: color-link
  transition: color 0.7s
  &:hover
    color: color-linkhover

.clear
  clear: both

header
  margin: 0 auto
  width: 900px
  .sketch
    margin: 30px 0 30px 0
    a
      color: color-default
  .navbar
    border-bottom: 1px solid color-cutline
    border-top: 1px solid color-cutline
    ul
      list-style: none
      height: 18px
      padding: 0
      li
        list-style: none
        float: left
        display: inline-block
        padding: 0 25px 0 0
        text-transform: capitalize

main
  width: 900px
  margin: 0 auto
  h1
    font-size: 50px
    text-align: center
  article
    letter-spacing: 0.2px
    line-height: 30px
    width: 600px
    margin: 0 auto
  ul.artist
    list-style: none
    padding: 0
    li
      list-style: none
      float: left
      display: inline-block
      margin: 0 30px 30px 0
      width: 256px
      height: 144px
      border: 1px solid #dedede
      border-radius: 3px
      overflow: hidden
      img
        width: 256px

footer
  padding-top: 10px
  margin: 50px auto
  border-top: 1px solid color-cutline
  width: 900px
