.root {
  margin: 34px 0 0 110px;
  display: flex
  flex-direction: column;
  color: #FFF;
  text-decoration: none;
}

.nav-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.nav-ele {
  display: flex;
  flex-direction: column;
  margin: 5px 0 0 0;
  padding: 0;
}

.nav-ele .verticl-bar {
  background: rgba(255, 255, 255, 0.9);
  width: 3px;
  height: 60px;
  margin: 0 0 5px 6.5px;
}

.nav-ele:first-child .verticl-bar {
  background: linear-gradient(to top,rgba(255,255,255,1) 0%,rgba(255,255,255,0) 100%);
}

.nav-ele:last-child .verticl-bar {
  background: linear-gradient(to bottom,rgba(255,255,255,1) 0%,rgba(255,255,255,0) 100%);
}

.nav-ele .nav-handler {
  display: flex;
  flex-direction: row;
  position: relative;
  .nav-dot-wrapper {
    height: 100%;
    display: flex;
    position: absolute;
    flex-direction: column;
    justify-content: center;
    .nav-dot {
      width: 16px;
      height: 16px;
      background: rgba(255, 255, 255, 0.9);
      border-radius: 8px;
      box-shadow: 0 0 2px 0 #FFF;
    }
  }
  .nav-btn {
    margin: 0 0 0 35px;
    color: #FFF;
    text-decoration: none;
    font-size: 16px;
  }
}
