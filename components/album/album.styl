.album {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 60px 0 0 0;
}

.image-wrapper {
  display: inline-block;
  background-color: #EDEEEE;
  width: 250px;
  height: 250px;
  margin: 0 27px 27px 0;
  position: relative;
}

.image-container {
  width: 250px;
  height: 250px;
  background-size: cover;
  background-position: center center;
}

.image-hover {
  cursor: pointer;
}

.close-aligner {
  z-index: 1;
  display: flex;
  position: fixed;
  justify-content: flex-end;
  width: 100%;
  top: 0;
  right: 0;
}

.close {
  display: block;
  font-family: FontAwesome;
  font-size: 36px;
  line-height: 36px;
  margin: 10px 10px auto;
  color: #BDBDBD;
  cursor: pointer;
  &:before {
    content: "\f00d";
  }
  &:hover {
    color: #D8D8D8;
  }
}

.image-modal {
  overflow: auto;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  text-align: center;
  outline: none;
}

.large-image {
  width: 100%;
}

@media (max-width: 480px) {
  .album {
    margin: 30px 0 0 0;
  }
  .image-wrapper {
    width: 120px;
    height: 120px;
  }
  .image-container {
    width: 120px;
    height: 120px;
  }
}
