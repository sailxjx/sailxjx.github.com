block variables
html(lang="en")
  head
    title CodeBean
    meta(charset="utf-8")
    meta(name="description", content="Codebean by Xu Jingxin")
    link(rel="stylesheet", href="/styles/main.css")
    block style
    script(id="gta-main", src="/vendor/gta/lib/index.js", data-baidu="43f786342ba0680af108248b28280fdb", data-google="UA-33186961-1", data-mixpanel="204d761f0c52d9ddcf031ec634f98772")
  body
    header(role="banner")
      p.sketch
        a(href="/") Xu Jingxin - Developer
      h1 #{title}
      nav.navbar
        ul
          if nav == 'home'
            li.nav.active home
          else
            li.nav
              a(href="/") home
          for _nav in ['blog', 'projects', 'artist', 'playground']
            if _nav == nav
              li.nav.active #{_nav}
            else
              li.nav
                a(href="/#{_nav}") #{_nav}
    main
      block main
